@model MyGameStore.Controllers.RecommendedGameProductVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RecommendedGameProducts</h4>
<hr />
<div class="container mt-5">
	<div class="row">
		<div class="col-md-4">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="ExpertName" class="control-label"></label>
					<input asp-for="ExpertName" class="form-control" />
					<span asp-validation-for="ExpertName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ExpertSurname" class="control-label"></label>
					<input asp-for="ExpertSurname" class="form-control" />
					<span asp-validation-for="ExpertSurname" class="text-danger"></span>
				</div>
				<div class="form-group d-flex">					
					<div>
						Название:
						<input asp-for="SelectedGameProduct" type="text" />
						<input type="submit" value="поиск..." />
					</div>
					
					<select asp-for="SearchGameProduct"
							asp-items="Model.GameProducts">
						<option value="">вы не выбрали </option>
					</select>
				</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</div>
<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
